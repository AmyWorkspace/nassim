{
    "PageTitle": "display mpls bfd session protocol ldp",
    "FuncDef": "The display mpls bfd session protocol ldp command displays information about dynamic BFD for LDP LSP sessions.",
    "CLIs": [
        "display mpls bfd session protocol ldp [ fec <ip-address> ] [ bfd-type { ldp-tunnel | ldp-lsp } ]",
        "display mpls bfd session protocol ldp [ fec <ip-address> ] [ bfd-type { ldp-tunnel | ldp-lsp } ] verbose"
    ],
    "ParentView": [
        "All views"
    ],
    "ParaDef": [
        {
            "Parameters": "fec ip-address",
            "Info": "Displays information about a BFD session for an LSP mapped to a specified FEC.\nExpressed in dotted decimal notation."
        },
        {
            "Parameters": "bfd-type",
            "Info": "Specifies the type of BFD session.\n-"
        },
        {
            "Parameters": "ldp-tunnel",
            "Info": "Displays information about BFD sessions that monitor LDP tunnels.\n-"
        },
        {
            "Parameters": "ldp-lsp",
            "Info": "Displays information about BFD sessions that monitor LDP LSPs.\n-"
        },
        {
            "Parameters": "verbose",
            "Info": "Displays detailed information about BFD sessions.\n-"
        }
    ],

{
    "PageTitle": "display isis segment-routing mapping-server",
    "FuncDef": "The display isis segment-routing mapping-server command displays mapping between prefixes and SIDs in an IS-IS process.",
    "CLIs": [
        "display isis [ <process-id> ] segment-routing mapping-server [ <ip-address> <mask-length> ]"
    ],
    "ParentView": [
        "All views"
    ],
    "ParaDef": [
        {
            "Parameters": "process-id",
            "Info": "Specifies the ID of an IS-IS process.\nThe value is an integer ranging from 1 to 4294967295."
        },
        {
            "Parameters": "ip-address",
            "Info": "Specifies the IP address of an interface.\nThe value is in dotted decimal notation."
        },
        {
            "Parameters": "mask-length",
            "Info": "Specifies a mask length.\nThe value is an integer ranging from 0 to 32."
        }
    ],

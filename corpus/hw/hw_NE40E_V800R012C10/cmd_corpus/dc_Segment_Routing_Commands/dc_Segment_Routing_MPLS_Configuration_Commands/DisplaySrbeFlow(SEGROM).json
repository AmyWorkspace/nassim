{
    "PageTitle": "display segment-routing traffic-statistics",
    "FuncDef": "The display segment-routing traffic-statistics command displays SR LSP (that is, SR-MPLS BE tunnel) traffic statistics.",
    "CLIs": [
        "display segment-routing traffic-statistics [ <ip-address> <mask-length> ] [ verbose ]"
    ],
    "ParentView": [
        "All views"
    ],
    "ParaDef": [
        {
            "Parameters": "ip-address",
            "Info": "Specifies an interface IP address.\nThe value is in dotted decimal notation."
        },
        {
            "Parameters": "mask-length",
            "Info": "Specifies a mask length.\nThe value is 32."
        },
        {
            "Parameters": "verbose",
            "Info": "Specifies to display detailed traffic statistics.\n-"
        }
    ],

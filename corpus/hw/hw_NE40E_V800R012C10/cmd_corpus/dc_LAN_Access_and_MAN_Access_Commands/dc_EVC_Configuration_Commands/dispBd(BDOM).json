{
    "PageTitle": "display bridge-domain",
    "FuncDef": "The display bridge-domain command displays bridge domain (BD) configurations.",
    "CLIs": [
        "display bridge-domain [ binding-info | <bdid> [ verbose | brief | binding-info ] ]"
    ],
    "ParentView": [
        "All views"
    ],
    "ParaDef": [
        {
            "Parameters": "binding-info",
            "Info": "Displays the binding information between BDs and VNIs, VSIs, and EVPN instances.\n-"
        },
        {
            "Parameters": "bdid",
            "Info": "Displays information about a BD with a specified ID.\nThe value is an integer ranging from 1 to 16777215."
        },
        {
            "Parameters": "verbose",
            "Info": "Displays detailed BD information.\n-"
        },
        {
            "Parameters": "brief",
            "Info": "Displays brief BD information.\n-"
        }
    ],
    "Examples": [

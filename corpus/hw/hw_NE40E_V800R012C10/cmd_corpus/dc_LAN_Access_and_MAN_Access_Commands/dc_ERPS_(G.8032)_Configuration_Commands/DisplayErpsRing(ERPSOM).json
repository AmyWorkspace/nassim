{
    "PageTitle": "display erps",
    "FuncDef": "The display erps command displays information about ERPS rings and ports that are added to the ERPS rings.",
    "CLIs": [
        "display erps [ ring <ring-id> ] [ verbose ]"
    ],
    "ParentView": [
        "All views"
    ],
    "ParaDef": [
        {
            "Parameters": "ring ring-id",
            "Info": "Displays information about a specified ERPS ring and ports that are added to the ERPS ring.\nThe value is an integer ranging from 1 to 255."
        },
        {
            "Parameters": "verbose",
            "Info": "Displays detailed information about ERPS rings and ports that are added to the ERPS rings.\n-"
        }
    ],

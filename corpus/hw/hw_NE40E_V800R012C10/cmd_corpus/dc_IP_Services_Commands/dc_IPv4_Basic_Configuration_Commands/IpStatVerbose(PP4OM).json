{
    "PageTitle": "display ip statistics verbose",
    "FuncDef": "The display ip statistics verbose command displays statistics about IP packets by protocol types, such as ICMP, IGMP, PIM, VRRP, OSPF, TCP, UDP, and others.",
    "CLIs": [
        "display ip statistics verbose [ protocol { <protocol-id> | gre | icmp | igmp | ospf | pim | rsvp | tcp | udp | vrrp } ]"
    ],
    "ParentView": [
        "All views"
    ],
    "ParaDef": [
        {
            "Parameters": "protocol",
            "Info": "Displays statistics about IP packets of a specific protocol.\n-"
        },
        {
            "Parameters": "protocol-id",
            "Info": "Specifies a protocol ID.\nThe value is an integer ranging from 1 to 255.\nThe value can be 1(ICMP), 2(IGMP), 6(TCP), 17(UDP), 46(RSVP), 89(OSPF), 103(PIM), or 112(VRRP). If the protocol ID specified is none of the preceding values, the protocol is displayed as \"Others\"."
        },
        {
            "Parameters": "gre",
            "Info": "Displays statistics about IP packets of GRE protocol.\n-"
        },
        {
            "Parameters": "icmp",
            "Info": "Displays statistics about IP packets of ICMP protocol.\n-"
        },
        {
            "Parameters": "igmp",
            "Info": "Displays statistics about IP packets of IGMP protocol.\n-"
        },
        {
            "Parameters": "ospf",
            "Info": "Displays statistics about IP packets of OSPF protocol.\n-"
        },
        {
            "Parameters": "pim",
            "Info": "Displays statistics about IP packets of PIM protocol.\n-"
        },
        {
            "Parameters": "rsvp",
            "Info": "Displays statistics about IP packets of RSVP protocol.\n-"
        },
        {
            "Parameters": "tcp",
            "Info": "Displays statistics about IP packets of TCP protocol.\n-"
        },
        {
            "Parameters": "udp",
            "Info": "Displays statistics about IP packets of UDP protocol.\n-"
        },
        {
            "Parameters": "vrrp",
            "Info": "Displays statistics about IP packets of VRRP protocol.\n-"
        }
    ],

{
    "PageTitle": "display ospf spf-statistics",
    "FuncDef": "The display ospf spf-statistics command displays route calculation statistics in OSPF processes.",
    "CLIs": [
        "display ospf [ <process-id> ] spf-statistics [ verbose ]"
    ],
    "ParentView": [
        "All views"
    ],
    "ParaDef": [
        {
            "Parameters": "process-id",
            "Info": "Specifies the ID of an OSPF process.\nIf no OSPF process ID is specified, this command displays brief information about route calculation statistics in all processes.\nThe value is an integer ranging from 1 to 4294967295."
        },
        {
            "Parameters": "verbose",
            "Info": "Displays detailed information about route calculation statistics.\n-"
        }
    ],

{
    "PageTitle": "display ospf peer",
    "FuncDef": "The display ospf peer command displays information about neighbors in each OSPF area.",
    "CLIs": [
        "display ospf [ <process-id> ] peer [ <interfaceName> | <interfaceType> <interfaceNum> | { <neighbor-id> | hostname <hostnamestr> } | brief | last-nbr-down ]",
        "display ospf [ <process-id> ] peer { { <interfaceName> | <interfaceType> <interfaceNum> } { <neighbor-id> [ resolve-hostname ] | hostname <hostnamestr> } }",
        "display ospf [ <process-id> ] peer [ <interfaceName> | <interfaceType> <interfaceNum> | <neighbor-id> | brief ] resolve-hostname"
    ],
    "ParentView": [
        "All views"
    ],
    "ParaDef": [
        {
            "Parameters": "process-id",
            "Info": "Specifies the ID of an OSPF process.\nThe value is an integer ranging from 1 to 4294967295."
        },
        {
            "Parameters": "interfaceType",
            "Info": "Specifies the interface type.\n-"
        },
        {
            "Parameters": "interfaceNum",
            "Info": "Specifies the interface number.\nThe value is a string of 1 to 63 case-sensitive characters, spaces not supported."
        },
        {
            "Parameters": "neighbor-id",
            "Info": "Specifies the neighbor router ID.\nThe value is in dotted decimal notation."
        },
        {
            "Parameters": "hostname hostnamestr",
            "Info": "Specifies a dynamic hostname.\nThe value is a string of 1 to 255 characters."
        },
        {
            "Parameters": "brief",
            "Info": "Displays brief information about neighbors in each OSPF area.\n-"
        },
        {
            "Parameters": "last-nbr-down",
            "Info": "Displays brief information about the last neighbor that goes Down in the OSPF area.\n-"
        },
        {
            "Parameters": "resolve-hostname",
            "Info": "Displays information about resolved dynamic hostnames.\n-"
        }
    ],
    "Examples": [

{
    "PageTitle": "display ospfv3 error",
    "FuncDef": "The display ospfv3 error command displays OSPFv3 errors.",
    "CLIs": [
        "display ospfv3 error",
        "display ospfv3 <process-id> error",
        "display ospfv3 [ <process-id> ] error lsa",
        "display ospfv3 error interface { <interface-name> | <interface-type> <interface-number> }",
        "display ospfv3 <process-id> error interface { <interface-name> | <interface-type> <interface-number> }"
    ],
    "ParentView": [
        "All views"
    ],
    "ParaDef": [
        {
            "Parameters": "process-id",
            "Info": "Specifies an OSPFv3 process ID. If no process ID is specified, errors of all OSPFv3 processes are displayed.\nThe value ranges from 1 to 4294967295."
        },
        {
            "Parameters": "lsa",
            "Info": "Displays OSPFv3 LSA errors.\n-"
        },
        {
            "Parameters": "interface interface-name",
            "Info": "Specifies the name of an interface.\n-"
        },
        {
            "Parameters": "interface-type",
            "Info": "Specifies the type of an interface.\n-"
        },
        {
            "Parameters": "interface-number",
            "Info": "Specifies the number of an interface.\n-"
        }
    ],

{
    "PageTitle": "display ospfv3 area",
    "FuncDef": "The display ospfv3 area command displays OSPFv3 area information.",
    "CLIs": [
        "display ospfv3 [ <process-id> ] area [ <area-id> | <area-idIpv4> ]"
    ],
    "ParentView": [
        "All views"
    ],
    "ParaDef": [
        {
            "Parameters": "process-id",
            "Info": "Specifies the ID of an OSPFv3 process.\nThe value is an integer ranging from 1 to 4294967295."
        },
        {
            "Parameters": "area area-id",
            "Info": "Displays information about the OSPFv3 area with a specified area ID.\nThe value of the area ID can be a decimal integer or in the IPv4 address format. The integer ranges from 0 to 4294967295."
        }
    ],

{
    "PageTitle": "display isis statistics packet",
    "FuncDef": "The display isis statistics packet command displays the statistics of an IS-IS process, including the routes that are learned from other IS-IS routers, routes that are imported from other protocols, the convergence priority of IS-IS routes, and LSPs that are generated locally.",
    "CLIs": [
        "display isis statistics packet [ interface [ <interface-name> | <interfacetype> <interfacenumber> ] ]",
        "display isis <process-id> statistics packet",
        "display isis statistics packet lsp [ <process-id> | { vpn-instance <vpn-instance-name> } ]",
        "display isis [ <process-id> ] statistics packet lsp"
    ],
    "ParentView": [
        "All views"
    ],
    "ParaDef": [
        {
            "Parameters": "interface interfacetype interfacenumber",
            "Info": "Displays statistics of the packets on a specified interface.\n-"
        },
        {
            "Parameters": "process-id",
            "Info": "Specifies a process ID of IS-IS.\nThe value is an integer ranging from 1 to 4294967295."
        },
        {
            "Parameters": "packet",
            "Info": "Displays statistics of various IS-IS packets.\n-"
        },
        {
            "Parameters": "lsp",
            "Info": "Displays statistics about IS-IS LSPs.\n-"
        },
        {
            "Parameters": "vpn-instance vpn-instance-name",
            "Info": "Displays statistics of the instance to which an IS-IS process belongs.\nThe value is a string of 1 to 31 case-sensitive characters, spaces not supported. In addition, the VPN instance name must not be _public_. When double quotation marks are used around the string, spaces are allowed in the string."
        }
    ],

{
    "PageTitle": "display isis statistics updated-lsp",
    "FuncDef": "The display isis statistics updated-lsp command displays the statistics of an IS-IS process, including the routes that are learned from other IS-IS routers, routes that are imported from other protocols, the convergence priority of IS-IS routes, and LSPs that are generated locally.",
    "CLIs": [
        "display isis <process-id> statistics updated-lsp [ history ] [ level-1 | level-2 | level-1-2 ]",
        "display isis statistics updated-lsp [ history ] [ level-1 | level-2 | level-1-2 ] [ <process-id> | vpn-instance <vpn-instance-name> ]"
    ],
    "ParentView": [
        "All views"
    ],
    "ParaDef": [
        {
            "Parameters": "process-id",
            "Info": "Specifies a process ID of IS-IS.\nThe value is an integer ranging from 1 to 4294967295."
        },
        {
            "Parameters": "updated-lsp",
            "Info": "Displays statistics of updated LSPs.\n-"
        },
        {
            "Parameters": "history",
            "Info": "Displays statistics of recorded updated LSPs.\n-"
        },
        {
            "Parameters": "level-1",
            "Info": "Displays statistics of IS-IS Level-1.\n-"
        },
        {
            "Parameters": "level-2",
            "Info": "Displays statistics of IS-IS Level-2.\n-"
        },
        {
            "Parameters": "level-1-2",
            "Info": "Displays statistics of IS-IS Level-1-2.\n-"
        },
        {
            "Parameters": "vpn-instance vpn-instance-name",
            "Info": "Displays statistics of the instance to which an IS-IS process belongs.\nThe value is a string of 1 to 31 case-sensitive characters, spaces not supported. In addition, the VPN instance name must not be _public_. When double quotation marks are used around the string, spaces are allowed in the string."
        }
    ],

{
    "PageTitle": "display sma statistics",
    "FuncDef": "The display sma statistics command displays SMA protocol packet statistics on an AER.",
    "CLIs": [
        "display sma statistics { as | prefix | tag }"
    ],
    "ParentView": [
        "All views"
    ],
    "ParaDef": [
        {
            "Parameters": "as",
            "Info": "Displays statistics about SMA protocol packets with AS registration information.\n-"

    "FuncDef": "Using the display ipsec statistics command, you can view the statistics about protocol packets processed by IPsec.",
    "CLIs": [
        "display ipsec statistics sa-name <sa-name> [ slot <slot-number> ]"
    ],
    "ParentView": [
        "All views"
    ],
    "ParaDef": [
        {
            "Parameters": "sa-name sa-name",
            "Info": "Specifies the IPsec Security Association (SA) name.\nIt is a string of 1 to 15 case-sensitive characters, spaces not supported. The characters can be letters or numbers, hyphens (-) not supported. When double quotation marks are used around the string, spaces are allowed in the string."
        },
        {
            "Parameters": "slot slot-number",
            "Info": "Specifies the slot number on which IPsec component is running.\n-"
        }

{
    "PageTitle": "display bfd bit-error-detection session",
    "FuncDef": "The display bfd bit-error-detection session command displays information about BFD sessions for bit error detection.",
    "CLIs": [
        "display bfd bit-error-detection session all",
        "display bfd bit-error-detection session tunnel { interface { <interface-name> | <interface-type> <interface--number> } [ backup ] | ingress-lsr-id <ingress-lsr-id> tunnel-id <tunnel-id> lsp-id <lsp-id> }",
        "display bfd bit-error-detection session section interface { <interface-name> | <interface-type> <interface--number> }",
        "display bfd bit-error-detection session peer-ip <peer-ip> interface { <interface-name> | <interface-type> <interface--number> }"
    ],
    "ParentView": [
        "All views"
    ],
    "ParaDef": [
        {
            "Parameters": "tunnel",
            "Info": "Displays information about BFD sessions for tunnel bit error detection.\n-"
        },
        {
            "Parameters": "interface interface-type interface--number",
            "Info": "Displays information about the BFD session used to detect bit errors on an interface with the specified type and number.\n-"
        },
        {
            "Parameters": "interface interface-type",
            "Info": "Displays information about the BFD session used to detect bit errors on an tunnel with the specified type.\n-"
        },
        {
            "Parameters": "interface interface--number",
            "Info": "Displays information about the BFD session used to detect bit errors on an tunnel with the specified number.\n-"
        },
        {
            "Parameters": "interface interface-name",
            "Info": "Displays information about the BFD session used to detect bit errors on an tunnel with the specified name.\n-"
        },
        {
            "Parameters": "backup",
            "Info": "Displays information about BFD sessions used to detect the bit errors of backup LSPs of tunnels.\n-"
        },
        {
            "Parameters": "ingress-lsr-id ingress-lsr-id",
            "Info": "Displays information about BFD sessions used to detect the bit errors of tunnels with the specified ingress LSR ID.\nThe value is an integer ranging from 0 to 4294967295."
        },
        {
            "Parameters": "tunnel-id tunnel-id",
            "Info": "Displays information about BFD sessions used to detect the bit errors of tunnels with the specified tunnel ID.\nThe value is an integer ranging from 0 to 4294967295."
        },
        {
            "Parameters": "lsp-id lsp-id",
            "Info": "Displays information about BFD sessions used to detect the bit errors of LSPs with the specified LSP ID.\nThe value is an integer ranging from 0 to 4294967295."
        },
        {
            "Parameters": "section",
            "Info": "Displays information about BFD sessions for section bit error detection.\n-"
        },
        {
            "Parameters": "peer-ip peer-ip",
            "Info": "Displays information about BFD sessions used to detect the bit errors with the specified peer IP address..\nThe value is in dotted decimal notation."
        },
        {
            "Parameters": "all",
            "Info": "Displays information about all BFD sessions for bit error detection.\n-"
        }
    ],

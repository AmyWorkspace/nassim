{
    "PageTitle": "display vrrp statistics",
    "FuncDef": "The display vrrp statistics command displays the current VRRP status, configured parameters, and statistics about the sent and received VRRP Advertisement packets.",
    "CLIs": [
        "display vrrp [ interface { <interface-type> | <interface-type> <interface-number> } ] [ <virtual-router-id> ] statistics"
    ],
    "ParentView": [
        "All views"
    ],
    "ParaDef": [
        {
            "Parameters": "interface interface-type interface-number",
            "Info": "Specifies the type and number of an interface.\n-"
        },
        {
            "Parameters": "virtual-router-id",
            "Info": "Specifies the ID of a VRRP backup group.\nThe value is an integer ranging from 1 to 255."
        }
    ],

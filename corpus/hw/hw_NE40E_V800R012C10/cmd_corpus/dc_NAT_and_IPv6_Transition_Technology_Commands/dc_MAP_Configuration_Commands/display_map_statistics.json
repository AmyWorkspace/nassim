{
    "PageTitle": "display map statistics",
    "FuncDef": "The display map statistics command displays statistics about packets matching a BMR.\nThe reset map statistics command deletes statistics about packets matching a BMR.",
    "CLIs": [
        "display map statistics { transmitted | payload } rule <rule-name> [ slot <slot-id> ]",
        "reset map statistics [ rule <rule-name> ] [ slot <slot-id> ]"
    ],
    "ParentView": [
        "All views"
    ],
    "ParaDef": [
        {
            "Parameters": "transmitted",
            "Info": "The statistics about sent packets on a service board.\n-"
        },
        {
            "Parameters": "payload",
            "Info": "The statistics about forwarding payload on a service board.\n-"
        },
        {
            "Parameters": "rule rule-name",
            "Info": "Specifies a BMR name.\nThe value is a string of 1 to 31 case-sensitive characters."
        },
        {
            "Parameters": "slot slot-id",
            "Info": "Specifies the slot ID of a board.\nThe value is a string of 1 to 15 case-sensitive characters."
        }
    ],

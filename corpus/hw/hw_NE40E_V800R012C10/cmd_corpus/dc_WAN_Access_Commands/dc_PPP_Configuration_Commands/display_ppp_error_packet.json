{
    "PageTitle": "display ppp error-packet",
    "FuncDef": "The display ppp error-packet command displays information about error protocol packets on a PPP interface.",
    "CLIs": [
        "display ppp error-packet { <interface-name> | <interface-type> <interface-number> } [ verbose ]"
    ],
    "ParentView": [
        "All views"
    ],
    "ParaDef": [
        {
            "Parameters": "interface-name",
            "Info": "Specifies the name of an interface.\n-"
        },
        {
            "Parameters": "interface-type",
            "Info": "Specifies the type of an interface.\n-"
        },
        {
            "Parameters": "interface-number",
            "Info": "Specifies the number of an interface.\n-"
        },
        {
            "Parameters": "verbose",
            "Info": "Displays detailed information about the latest five error protocol packets on a PPP interface If this parameter is not configured, statistics about error protocol packets on a PPP interface are displayed.\n-"
        }
    ],

{
    "PageTitle": "bert",
    "FuncDef": "This command initiates or restarts a Bit Error Rate Test (BERT) on the associated DS-1/E-1 or DS-3/E-3 circuit.",
    "CLIs": [
        "bert { 2e3 | 2e9 | 2e11 | 2e15 | 2e20 | 2e20q | 2e23 | ones | zeros | alternating } duration <duration>",
        "no bert"
    ],
    "ParentView": [
        "config>port>tdm>ds1",
        "config>port>tdm>ds3",
        "config>port>tdm>e1",
        "config>port>tdm>e3"
    ],
    "ParaDef": [
        {
            "Parameters": "duration",
            "Info": "Sets the duration for the BERT test. Values-Up to 24 hours, in seconds or hh:mm:ss format."
        },
        {
            "Parameters": "ones",
            "Info": "Sends an all ones pattern."
        },
        {
            "Parameters": "zeros",
            "Info": "Sends an all zeros pattern."
        },
        {
            "Parameters": "alternating",
            "Info": "Sends an alternating ones and zeros pattern."
        },
        {
            "Parameters": "2e3",
            "Info": "Sends a pseudo-random 2^3 -1 pattern."
        },
        {
            "Parameters": "2e9",
            "Info": "Sends a pseudo-random 2^9 -1 pattern."
        },
        {
            "Parameters": "2e15",
            "Info": "Sends a pseudo-random 2^15 -1 pattern."
        },
        {
            "Parameters": "2e20",
            "Info": "Sends a pseudo-random 2^20 -1 pattern. Not available on channelized ASAP MDAs."
        },
        {
            "Parameters": "2e23",
            "Info": "Sends a pseudo-random 2^23 -1 pattern."
        }
    ],
    "Examples": null,
    "ExtraInfo": "Default: bert 2e3"
}